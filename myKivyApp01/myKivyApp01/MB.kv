#:kivy 1.0.9

<RootContainer>:
	id: theRoot
	lbl1: my_labelH
	lbl2: my_labelC
	lbl3: my_labelCS

	BoxLayout:
		id: my_box01
		orientation: 'vertical'
		spacing: 20
		padding: 20

		canvas: 
			Color: 
				rgb: 0, .83, 0 
			Rectangle: 
				pos: self.pos 
				size: self.size

		Button:
			id: my_buttonAC
			text: "AC - Access Control"
			text_size: self.size
			size_hint: (.5,1)
			on_press: theRoot.clickAction1(self)

		Button:
			id: my_buttonAT
			text: "AT - IT Security Awareness and Training"
			text_size: self.size
			size_hint: (.5,1)
			on_press: root.clickAction1(self)

    GridLayout:
		rows: 3
		cols: 1
		spacing: 10
		padding: 10

		canvas: 
			Color: 
				rgb: 0, .63, 0  
			Rectangle: 
				pos: self.pos 
				size: self.size


		ScrollView:
			bar_width: 12
			bar_color: 0, .63, 0, .9
			Label:
				id: my_labelH
				size_hint: 1, None
				text_size: self.width, None
				height: self.texture_size[1]
				canvas.before:
					Color:
						rgb: 0,0,0
					Rectangle:
						pos: self.pos
						size: self.size
				text: "Current control step (number)"


		ScrollView:
			bar_width: 12
			bar_color: 0, .63, 0, .9
			Label:
				id: my_labelC
				size_hint: 1, None
				text_size: self.width, None
				height: self.texture_size[1]
				canvas.before:
					Color:
						rgb: 0,0,0
					Rectangle:
						pos: self.pos
						size: self.size
				text: "Click button for content to be displayed here. Content for button clicked ......."
		
		ScrollView:
			bar_width: 12
			bar_color: 0, .63, 0, .9
			Label:
				id: my_labelCS
				size_hint: 1, None
				text_size: self.width, None
				height: self.texture_size[1]
				canvas.before:
					Color:
						rgb: 0,0,0
					Rectangle:
						pos: self.pos
						size: self.size
				text: "Control sub-step list"

