#:kivy 1.0.9

<FamilyButtons>:
	text_size: self.size
	on_press: self.theRoot.clickAction1(self)


<SubControlButtons>:
	text_size: self.size
	on_press: self.theRoot.clickAction2(self)


<RootContainer>:
	id: theRoot
	lbl1: my_labelH
	lbl2: my_labelC
	lbl3: my_btnGrid
	lbl4: my_btnScroll
	lbl5: my_box01

	#left side GRID with control family buttons
	BoxLayout:
		id: my_box01
		orientation: 'vertical'
		spacing: 20
		padding: 20
		canvas: 
			Color: 
				rgb: 0, .83, 0 
			Rectangle: 
				pos: self.pos 
				size: self.size


	#right side GRID with content
    GridLayout:
		rows: 3
		cols: 1
		spacing: 10
		padding: 10

		canvas: 
			Color: 
				rgb: 0, .63, 0  
			Rectangle: 
				pos: self.pos 
				size: self.size


		ScrollView:
			bar_width: 12
			bar_color: 0, .63, 0, .9
			Label:
				id: my_labelH
				markup: True
				size_hint: 1, None
				text_size: self.width, None
				height: self.texture_size[1]
				canvas.before:
					Color:
						rgb: 0,0,0
					Rectangle:
						pos: self.pos
						size: self.size
				text: "Acceptable evidence details for control step will be displayed here"


		ScrollView:
			bar_width: 12
			bar_color: 0, .63, 0, .9
			Label:
				id: my_labelC
				markup: True
				size_hint: 1, None
				text_size: self.width, None
				height: self.texture_size[1]
				canvas.before:
					Color:
						rgb: 0,0,0
					Rectangle:
						pos: self.pos
						size: self.size
				text: "Click button for content (with field reference GUIDE) to be displayed here. Content for button clicked ......."
		
		ScrollView:
			id: my_btnScroll
			bar_width: 12
			bar_color: 0, .63, 0, .9
			GridLayout:
				id: my_btnGrid
				cols: 3
				size_hint: 1, None
				#following forces the defined height of the child (i.e. button)
				row_force_default: True
				row_default_height: 30
				canvas:
					Color:
						rgb: 0,0,0
					Rectangle:
						pos: self.pos
						size: self.size
				Label:
					text: "Control Steps for Control Family displayed here"

