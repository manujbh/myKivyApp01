#:kivy 1.0.9

BoxLayout:
	orientation: 'vertical'
	# canvas.after will implement after all the children in BoxLayout
	canvas.after:
        Color:
            rgb: .06, .09, .9
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            width:10

	#top of BoxLayout
	GridLayout:
		cols: 2
		size_hint_y: None
		canvas.after:
			Color:
				rgb: 1,0,0
			Line:
				rectangle: self.x+1,self.y+1,self.width-1,self.height-1
				width: 2
		Spinner:
			text: 'Family'
			values: ('AC','AT', 'AU', 'CM')
			size_hint_y: None
			height: 100
		Spinner:
			text: "sub-step"
			values: ('AC-01.02.02.01', 'AC-04.02.01.01')
			size_hint_y:None
			height:100


	#bottom of BoxLayout
	GridLayout:
		cols:1
		canvas:
			Color:
				rgb: .8,1,1
			Rectangle:
				size: self.size
