#:kivy 1.0.9
GridLayout:
	rows: 2
	substep: substep
	controlfamily: controlfamily
	mygrid: mygrid
	mylabel: mylabel

	orientation: 'vertical'
	# canvas.after will implement after all the children in BoxLayout
	canvas.after:
        Color:
			#blue
            rgb: .06, .09, .9
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            width: 1

	#top of BoxLayout
	GridLayout:
		cols: 2
		size_hint_y: None
		canvas.after:
			Color:
				#red
				rgb: 1,0,0
			Line:
				rectangle: self.x+1,self.y+1,self.width-1,self.height-1
				width: 2
		Spinner:
			id: controlfamily
			text: 'Control Family'
			values: app.family_names
			size_hint_y: None
			height: 100
			on_text: app.onClickAction1(self)
		Spinner:
			id: substep
			text: "Sub-Step"
			values: app.substep_names
			size_hint_y:None
			height:100
			on_text: app.onClickAction2(self)


	#bottom of BoxLayout
	GridLayout:
		id: mygrid
		cols: 1
		rows: 1
		#size_hint: 1, None
		canvas.before:
			Color:
				#coral blue
				#rgb: .8,1,1
				#reddish brown
				rgb: .3,.2,.2
			Rectangle:
				size: self.size
			Line:
				rectangle: self.x+1,self.y+1,self.width-1,self.height-1
				dash_offset: 5
				dash_length: 10
		ScrollView:
			bar_width: 12
			bar_color: 0, .63, 0, .9
			Label:
				id: mylabel
				markup: True
				text: '\n\n Select options above for content (with field reference GUIDE)\n to be displayed here'
				size_hint_y: None
				text_size: self.width, None
				height: self.texture_size[1]


